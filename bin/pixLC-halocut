#!/usr/bin/env python
from __future__ import print_function, division
from pixlc.pixLC import readCFG
from helpers.SimulationAnalysis import readHlist
from mpi4py import MPI
import numpy as np
import pandas as pd
import sys
import fitsio


pusecols = ['ID', 'DESCID', 'MVIR', 'VMAX', 'VRMS', 'RVIR', 'RS', 'NP', 'X', 'Y', 'Z', 'VX', 'VY', 'VZ', 'PID']

lusecols = ['ID', 'DescID', 'Mvir', 'Vmax', 'Vrms', 'Rvir', 'Rs', 'Np', 'X', 'Y', 'Z', 'VX', 'VY', 'VZ', 'JX', 'JY', 'JZ', 'Spin', 'rs_klypin', 'Mvir_all', 'M200b', 'M200c', 'M500c', 'M2500c', 'Xoff', 'Voff', 'spin_bullock', 'b_to_a', 'c_to_a']



if __name__=='__main__':

    cfg = sys.argv[1]
    halofiles = sys.argv[2:]

    cfg = readCFG(cfg)

    comm = MPI.COMM_WORLD
    rank = comm.Get_rank()

    if rank==0:

        for hf in halofiles:
            fs = hf.split('.')

            if fs[-1]=='list':
                with open(hf, 'r') as fp:
                    with open('/'.join(fs[:-1])+'/cut_'+fs[-1]+'.list', 'w') as fp:
                        for i, l in enumerate(fp):
                            ls = l.split(' ')
                            if '#' in ls[0]:continue
                            x = float(ls[8])
                            y = float(ls[9])
                            z = float(ls[10])
                            r = sqrt(x**2 + y**2 + z**2)
                            if (cfg['rmin'] <= r) & (r < cfg['rmax']): wp.write(l)                        
                return
            else:
                halos = readHlist(hf)
            
            r = np.sqrt(halos['X']**2 + halos['Y']**2 + halos['Z']**2)
            ridx = np.where((float(cfg['rmin'])<=r) & (r<float(cfg['rmax'])))
            halos = halos[ridx]
            
            fs = hf.split('/')
            hfmt = '%d %d %.3e %.2f %.2f %.3f %.3f %d %.5f %.5f %.5f %.2f %.2f %.2f %d'
            hdr = ' '.join(pusecols)
            if 'parents' in hf:
                np.savetxt('/'.join(fs[:-1])+'/cut_'+fs[-1], halos, fmt=hfmt, header=hdr)
            else:
                fitsio.write('/'.join(fs[:-1])+'/cut_'+fs[-1]+'.fits', halos)
