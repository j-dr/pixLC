#!/usr/bin/env python
"""
    %prog command [options] file
    print a summary of a pixLC formatted file"""
from __future__ import print_function
import os
import sys
import struct
from optparse import OptionParser

parser = OptionParser(__doc__)

if __name__ == '__main__':
    options, args = parser.parse_args(sys.argv[1:])
    
    if len(args) < 1:
        parser.print_help()
        sys.exit(45)
    
    fname = args[0]
    
    # read the header
    hdrfmt = 'QIIfdQddd'
    with open(fname,'r') as fp:
        h = list(struct.unpack(hdrfmt,fp.read(struct.calcsize(hdrfmt))))
    
    # print it out
    print("# of particles:               %d" % h[0])
    print("Nside of pixels:              %d" % h[1])
    print("Nside for sorting:            %d" % h[2])
    print("box size [Mpc/h]:             %f" % h[3])
    print("particle mass [1e10 Msun/h]:  %g" % h[4])
    print("total # of particles:         %d" % h[5])
    print("OmegaM:                       %f" % h[6])
    print("OmegaLambda:                  %f" % h[7])
    print("h [100 km/s/Mpc]:             %f" % h[8])
    
    sys.exit(0)
